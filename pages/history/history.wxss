/* pages/history/history.wxss */
.history {
	width: 100%;
	min-height: 100%;
	background-color: #fafafa;
}

.history-nav {
	display: flex;
	height: 100rpx;
	margin-bottom: 30rpx;
	align-items: center;
	justify-content: space-around;
	background-color: #fff;
	color: #666666;
}

.history-nav-item {
	height: 80rpx;
	padding: 0 10rpx;
	display: flex;
	align-items: center;
	box-sizing: border-box;
}

.card {
	width: calc(100vw - 60rpx);
	margin: 0 auto 30rpx;
	box-shadow: 2px 2px 3px #f5f5f5;
	border-radius: 10rpx;
	z-index: 100;
	background-color: #fff;
}

.list-title {
	height: 80rpx;
	display: flex;
	padding: 0 30rpx;
	box-sizing: border-box;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	border-bottom: 1px solid #fafafa;
}

.list-title-label {
	display: flex;
	align-items: center;
}

.list-title-label image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}

.list-title-billId {
	color: #999999;
}

/*住院押金*/


.card-info-tr {
	display: flex;
	height: 80rpx;
	width: 100%;
	padding: 0 30rpx;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #fafafa;
	box-sizing: border-box;
	font-size: 28rpx;
}

.card-info-tr text {
	color: #2e82ff;
}

.card-info-key {
	color: #999999;
}

.card-info-value {
	color: #343434;
}

/*暂无账单*/
.empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.empty image {
	width: 500rpx;
	margin-bottom: 40rpx;
}

.empty text {
	color: #666666;
}

/*蒙层*/

.modal-wrapper {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    background-color:  rgba(0,0,0,.65);
    display: flex;
    /*flex-direction: column;*/
    justify-content: center;
    align-items: center;
}

.modal {
	width: 90%;
	padding: 30rpx 0rpx;
	background-color: #fff;
	border-radius: 10rpx;
}

.modal .header,
.modal .footer {
	height: 100rpx;
	font-size: 36rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
}

.modal .footer view {
	padding: 10rpx 40rpx;
	border-radius: 10rpx;
	color: #fff;
}

.modal .footer .footer-btn-confirm {
	background-color: #2e82ff;
}

.modal .footer .footer-btn-cancel {
	background-color: #cccccc;
}

.modal .content {
	width: 100%;
	display: flex;
	justify-content: center;
}

.picker-view {
	width: 80%; 
	height: 400rpx;
}

.picker-view-column {
	line-height: 50px;
	text-align: center;
}

.picker-view-column-highlight {
	color: #ff6e01
}
