/* pages/result/result.wxss */

.result {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.result image {
    width: 500rpx;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.bottom .bottom-ad {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; 
}

.bottom .bottom-ad-img image {
    width: 400rpx;
    height: auto;
}

.bottom .bottom-detail {
    display: flex;
    justify-content: center;
    width: 300rpx;
    margin-top: 40rpx;
    padding: 20rpx 0rpx;
    color: #fff;
    background-color: #2e82ff;
    border-radius: 60rpx;
}

