/* pages/advertisement/advertisement.wxss */
@import "../wxParse/wxParse.wxss";

.ad-detail {
    padding: 20px;
    font-size: 28rpx;
}
 
.ad-detail-wrapper {
    padding: 10px;
    width:80%;
	box-shadow: 5px 5px 5px #f5f5f5;
	border-radius: 5px;
}

.ad-detail-info {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 20px 0;
}

.ad-detail-wrapper-input {
    border-bottom: 1px solid #eee;
    padding: 10px;
    margin-bottom: 10px;
}

.ad-detail-button {
    margin-top: 20px;
    padding: 10px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #2e82ff;
    color: #fff;
    border-radius: 5px;
}