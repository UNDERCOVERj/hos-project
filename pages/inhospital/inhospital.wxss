/* pages/inhospital/inhospital.wxss */

.inhospital {
	width: 100%;
	min-height: 100%;
	box-sizing: border-box;
	padding-bottom: 100rpx;
	overflow: hidden;
	position: relative;
	background-color: #fafafa;
}

.inhospital-bg {
	width: 100%;
	height: 200rpx;
	position: absolute;
	top: 0;
}

/*卡片*/

.card {
	width: calc(100vw - 60rpx);
	position: absolute;
	top: 90rpx;
	transform: translateX(-50%);
	left: 50%;
	box-sizing: border-box;
	padding: 0 30rpx;
	box-shadow: 2px 2px 3px #f5f5f5;
	border-radius: 10rpx;
	z-index: 100;
	background-color: #fff;
}

.card-title {
	height: 110rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.card-title-highlight {
	font-size: 36rpx;
	color: #2e82ff;
}

.card-title-border {
	height: 0;
	width: 54rpx;
	margin-top: 10rpx;
	border-bottom: 2px solid #cccccc;
}

.card-info {
	border-bottom: 1px solid #fafafa;
}

.card-info-tr {
	display: flex;
	height: 80rpx;
	width: 100%;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	font-size: 28rpx;
}

.card-info-key {
	display: flex;
	align-items: center;
	max-width: 40%;
	color: #999999;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: break-word;
	word-break: break-all;
}

.card-info-value {
	max-width: 60%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	word-wrap: break-word;
	word-break: break-all;
	color: #343434;
}

.card-dot {
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.card-dot-blue {
	background-color: #2e82ff;
}

.card-dot-gray {
	background-color: #cccccc;
}

.card-dot-orange {
	background-color: #ff6e01;
}

.inhospital-footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
	position: fixed;
	width: 100%;
	bottom: 0;
	border-top: 1px solid #fafafa;
}

.inhospital-footer-input {
	display: flex;
	align-items: center;
}

.inhospital-footer-input text {
	color: #ff6e01;
	padding: 0 10rpx;
}

.inhospital-footer-input input {
	color: #ff6e01;
}

.inhospital-footer-btn {
	height: 100rpx;
	width: 200rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
}
